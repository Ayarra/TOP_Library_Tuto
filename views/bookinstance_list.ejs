<h1><%= locals.title %></h1>

<ul>
  <% if(locals.bookinstance_list.length){%> <%for(let i = 0; i<
  locals.bookinstance_list.length; i++){%>
  <li>
    <a href="<%=locals.bookinstance_list[i].url %>">
      <%=locals.bookinstance_list[i].book.title%> :
      <%=locals.bookinstance_list[i].imprint%>
    </a>
    <%if(bookinstance_list[i].status ==="Available"){%>
    <span class="text-success"><%=bookinstance_list[i].status %></span>
    <%} else if(bookinstance_list[i].status ==="Maintenance"){%>

    <span class="text-danger"><%=bookinstance_list[i].status %></span>
    <%}else{%>

    <span class="text-warning"><%=bookinstance_list[i].status %></span>
    <%}%> <%if(bookinstance_list[i].status !=="Available"){%>
    <span>Due : <%=bookinstance_list[i].due_back_formatted%></span>
    <%}%>
  </li>

  <%}} else{%>
  <li>There are no book copies in this library.</li>
  <%}%>
</ul>
