<h1><%=locals.title%></h1>

<form action="" method="post">
  <div class="form-group">
    <label for="first_name">First Name:</label>
    <input type="text" id="first_name" class="form-control" placeholder="First
    name" name="first_name" required value="<%=undefined === locals.author ? "":
    locals.author.first_name%>" />
  </div>
  <div class="form-group">
    <label for="first_name">Family Name:</label>
    <input type="text" id="family_name" class="form-control" placeholder="Family
    name" name="family_name" required value="<%=undefined === locals.author ?
    "": locals.author.family_name%>" />
  </div>
  <div class="form-group">
    <label for="date_of_birth">Date of Birth:</label>
    <input type="date" id="date_of_birth" class="form-control"
    name="date_of_birth" value="<%=undefined === locals.author ? "":
    locals.author.date_of_birth%>" />
  </div>
  <button class="btn btn-primary" type="submit">Submit</button>
</form>
<%if(locals.errors){%>
<ul>
  <%for(let i =0; i< locals.errors.length; i++){%>
  <li><%=locals.errors[i].msg%></li>
  <%}%>
</ul>
<%}%>
